from email.message import EmailMessage
import ssl
import smtplib

email_sender = 'YOUR EMAIL'
email_password = 'YOUR EMAIL PASSWORD'
# WHEN ADDING EMAIL PASSWORD, MAKE SURE YOU UTILIZE 'APP PASSWORDS' FOR GOOGLE VIA THIS LINK: https://www.youtube.com/watch?v=Dg8L5t3kdAU

email_receive = 'RECEIVER EMAIL ADDRESS

subject = 'Python Test'
body = '''This email comes from python!'''

em = EmailMessage()
em['From'] = email_sender
em['To'] = email_receive
em['Subject'] = subject
em.set_content(body)

context = ssl.create_default_context()

with smtplib.SMTP_SSL('smtp.gmail.com', 465, context=context) as smtp:
    smtp.login(email_sender, email_password)
    smtp.sendmail(email_sender, email_receive, em.as_string())

